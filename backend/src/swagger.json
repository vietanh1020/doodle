{
  "openapi": "3.0.0",

  "info": {
    "version": "1.0.0",
    "title": "DOODLE API DOC",
    "description": "Library API documentation",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },

  "servers": [
    {
      "url": "http://localhost:3001",
      "description": "doodle.com"
    }
  ],

  "paths": {
    "/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "Đăng nhập",
        "requestBody": {
          "description": "",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schema/Login"
              }
            }
          }
        },
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Đăng nhập thành công"
          },
          "401": {
            "description": "Đăng nhập thất bại"
          },
          "400": {
            "description": "Input không hợp lệ"
          }
        }
      }
    },
    "/register": {
      "post": {
        "tags": ["Auth"],
        "summary": "Đăng ký",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schema/Register"
              }
            }
          }
        },
        "produces": ["application/json"],
        "responses": {
          "201": {
            "description": "Đăng kí tài khoản thành công"
          },
          "401": {
            "description": "Failed. Đã tồn tại."
          }
        }
      }
    },

    "/poll": {
      "get": {
        "tags": ["Polls"],
        "summary": "Lấy tất cả cuộc bình chọn của User ",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Success`"
          },
          "401": {
            "description": "Chưa đăng nhập"
          }
        }
      },

      "post": {
        "tags": ["Polls"],
        "summary": "Tạo Poll mới",
        "requestBody": {
          "description": "Poll Object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schema/Poll"
              }
            }
          }
        },
        "produces": ["application/json"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "401": {
            "description": "Chưa đăng nhập"
          },
          "400": {
            "description": "Input không hợp lệ"
          },
          "500": {
            "description": "Lỗi Server"
          }
        }
      }
    },

    "/poll/save-image": {
      "post": {
        "tags": ["Polls"],
        "summary": "Lưu hình ảnh khi tạo poll",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "image": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "produces": ["application/json"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "401": {
            "description": "Chưa đăng nhập"
          },
          "400": {
            "description": "Input không hợp lệ"
          },
          "500": {
            "description": "Lỗi Server"
          }
        }
      }
    },

    "/poll/remove-image": {
      "post": {
        "tags": ["Polls"],
        "summary": "Xóa ảnh cũ trên Server khi Update/delete Poll",
        "requestBody": {
          "content": {
            "image/png": {
              "schema": {
                "type": "string",
                "format": "binary"
              }
            }
          }
        },
        "produces": ["application/json"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "401": {
            "description": "Chưa đăng nhập"
          },
          "400": {
            "description": "Input không hợp lệ"
          },
          "500": {
            "description": "Lỗi Server"
          }
        }
      }
    },

    "/poll/{id}": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "description": "ID of the poll that we want to match",
          "type": "string"
        }
      ],
      "get": {
        "tags": ["Polls"],
        "summary": "xem chi tiết cuộc bình chọn",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "description": "Poll with id"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Failed. Poll not found."
          }
        }
      },
      "put": {
        "summary": "Cập nhật cuộc bình chọn",
        "tags": ["Polls"],
        "requestBody": {
          "description": "Poll Object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schema/Poll"
              }
            }
          }
        },
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "description": "Poll with new values of properties"
          }
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],

        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Failed. Bad post data."
          },
          "404": {
            "description": "Failed. Poll not found."
          }
        }
      },
      "delete": {
        "summary": "Xóa cuộc bình chọn",
        "tags": ["Polls"],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "description": "Delete Poll with id"
          }
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Bạn phải đăng nhập ."
          },
          "404": {
            "description": "Failed. Poll not found."
          }
        }
      }
    },

    "/vote/{id}": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "description": "Vote Page",
          "type": "string"
        }
      ],
      "get": {
        "tags": ["Vote"],
        "summary": "Lấy data để tạo View Vote",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "description": "Vote Page"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Failed. Poll not found."
          }
        }
      },
      "post": {
        "tags": ["Vote"],
        "summary": "Guest tham gia bình chọn",
        "requestBody": {
          "description": "Vote Object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schema/Vote"
              }
            }
          }
        },
        "produces": ["application/json"],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Failed. Poll not found."
          }
        }
      }
    },

    "/result/{id}": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "description": "Result Vote ID",
          "type": "string"
        }
      ],
      "get": {
        "tags": ["Result Vote"],
        "summary": "Kết quả bình chọn",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "description": "Result Page"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Failed. Poll not found."
          }
        }
      }
    },

    "/comment/{id}": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "description": "Comment",
          "type": "string"
        }
      ],
      "get": {
        "tags": ["Comment"],
        "summary": "Lấy bình luận trong DB",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "description": "Comment",
            "schema": {
              "$ref": "#/components/schema/Comment"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Failed. Poll not found."
          }
        }
      },
      "post": {
        "tags": ["Comment"],
        "summary": "Lưu comment vào db",
        "requestBody": {
          "description": "Comment Object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schema/Comment"
              }
            }
          }
        },
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Failed. Poll not found."
          }
        }
      }
    },

    "/mail/{id}": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "description": "Gửi kết quả bình chọn  qua mail",
          "type": "string"
        }
      ],
      "post": {
        "tags": ["Send mail"],
        "summary": "Gửi kết quả cuộc bình chọn",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "description": "Poll with id"
          }
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Failed. Poll not found."
          }
        }
      }
    },

    "/logout": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "description": "Đăng xuất",
          "type": "string"
        }
      ],
      "post": {
        "tags": ["Logout"],
        "summary": "Đăng xuất",
        "parameters": [{}],
        "security": [
          {
            "Authorization": []
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Failed. Token không hợp lệ."
          }
        }
      }
    }
  },

  "components": {
    "schema": {
      "Poll": {
        "type": "object",
        "properties": {
          "question": {
            "type": "string"
          },
          "image": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "address": {
            "type": "string"
          },
          "map": {
            "type": "string"
          },
          "startAt": {
            "type": "string"
          },
          "endAt": {
            "type": "string"
          },
          "answers": {
            "type": "string"
          },
          "multipleVote": {
            "type": "boolean"
          }
        }
      },

      "Login": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },

      "Register": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          }
        }
      },

      "Vote": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "fullname": {
            "type": "string"
          },
          "answer": {
            "type": "string"
          }
        }
      },

      "Comment": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "fullname": {
            "type": "string"
          },
          "content": {
            "type": "string"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
